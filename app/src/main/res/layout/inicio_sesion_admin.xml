<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Actividades.InicioSesionAdminED">


    <TextView
        android:id="@+id/signIn"
        style="@style/textViewTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="@string/etiquetaIniciarSesionS" />


    <EditText
        android:id="@+id/user"
        style="@style/editTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signIn"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:autofillHints="emailAddress"
        android:background="@drawable/input_texto"
        android:drawableStart="@drawable/usuario"
        android:drawablePadding="12dp"
        android:hint="Correo de usuario"
        android:inputType="textEmailAddress"
        android:textSize="14dp"/>



    <EditText
        android:id="@+id/pass"
        style="@style/editTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:autofillHints="password"
        android:drawableStart="@drawable/ps"
        android:drawablePadding="12dp"
        android:hint="@string/pssS"
        android:inputType="textPassword"
        android:maxLength="10"
        android:textSize="14dp"/>


    <Button
        android:id="@+id/botonInicio"
        style="@style/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pass"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="10dp"
        android:text="@string/iniciarSesionS"
        android:textColor="@color/white" />

<!--    Prueba de rama cambios-->
</RelativeLayout>