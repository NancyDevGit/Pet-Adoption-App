<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
    android:id="@+id/mPublicacion"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/publicacion_background"
        android:layout_margin="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                style="@style/textViewMascotaStyle"
                android:id="@+id/tNombreM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Snoopy"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/mSex"
                android:layout_marginStart="8dp"
                android:layout_width="13dp"
                android:layout_height="match_parent"
                android:src="@drawable/macho" />

            <ImageView
                android:id="@+id/imgSolicitud"
                android:layout_marginStart="8dp"
                android:layout_width="13dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_message_24" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fotoMascota"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:adjustViewBounds="true"
                android:layout_weight=".50"
                android:src="@drawable/rcono" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/mUbicacion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                app:tint="@color/black"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ubicacion" />


            <TextView
                android:id="@+id/tUbicacionM"
                style="@style/textViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CDMX" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tEdadM"
                style="@style/textViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 aÃ±o" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tPersonalidadM"
                style="@style/textViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amigable" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tRazaD"
                style="@style/textViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Labrador" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">

            <TextView
                android:id="@+id/tVerMas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:textSize="14dp"
                android:layout_marginBottom="3dp"
                android:textStyle="italic"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/albornoz3"/>

        </LinearLayout>


    </LinearLayout>





